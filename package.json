{
  "name": "node-uci",
  "version": "1.3.0",
  "description": "Universal Chess Interface protocol implementation for node.js",
  "main": "lib/index.js",
  "jsnext:main": "src/index.js",
  "scripts": {
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:cov": "npm test -- --coverage",
    "pretest:ci": "npm run lint",
    "test:ci": "npm run test:cov && cat coverage/lcov.info | codeclimate-test-reporter",
    "build": "rimraf lib && cross-env NODE_ENV=production rollup -c",
    "docs": "rimraf docs && documentation build src/index.js -f html -o docs -g",
    "docs:watch": "documentation serve src/index.js -f html -o docs -g --watch src"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ebemunk/node-uci"
  },
  "keywords": [
    "universal chess interface",
    "uci",
    "chess",
    "engine"
  ],
  "author": "ebemunk",
  "license": "MIT",
  "dependencies": {
    "babel-runtime": "^6.11.6",
    "bluebird": "^3.4.0",
    "debug": "^2.2.0",
    "lodash": "^4.13.1"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-core": "^6.9.1",
    "babel-eslint": "^7.0.0",
    "babel-jest": "^17.0.2",
    "babel-loader": "^6.2.8",
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "codeclimate-test-reporter": "^0.4.0",
    "cross-env": "^3.0.0",
    "documentation": "^4.0.0-beta10",
    "eslint": "^3.1.1",
    "jest": "^17.0.3",
    "prettier": "^1.13.2",
    "rimraf": "^2.5.2",
    "rollup": "^0.36.3",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^5.0.5",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-plugin-uglify": "^1.0.1"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "es2015",
          "stage-0"
        ]
      },
      "production": {
        "presets": [
          [
            "es2015",
            {
              "modules": false
            }
          ],
          "stage-0"
        ]
      }
    },
    "plugins": [
      "external-helpers",
      "transform-runtime"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true,
      "jest": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        "tab",
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "never"
      ]
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/__test__/**"
    ]
  }
}
